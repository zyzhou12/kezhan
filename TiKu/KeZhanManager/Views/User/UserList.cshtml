@model KeZhanManager.Models.UserListModel
<table class="table table-border table-bordered table-hover table-bg table-sort">
    <thead>
        <tr class="text-c">
            <th width="25"><input type="checkbox" name="" value=""></th>
            <th width="80">ID</th>
            <th width="100">用户名</th>
            <th width="40">角色</th>
            <th width="90">手机</th>
            <th width="150">邮箱</th>
            <th width="">昵称</th>
            <th width="130">加入时间</th>
            <th width="70">状态</th>
            <th width="100">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.userList) { 
        <tr class="text-c">
            <td><input type="checkbox" value="@user.fID" name=""></td>
            <td>@user.fID</td>
            <td><u style="cursor:pointer" class="text-primary" onclick="item_show('@user.fMobile','UserDetail?strUserName=@user.fUserName','10001','360','400')">@user.fUserName</u></td>
            <td>@if (user.fRole == "Teacher")
                {
                    <span>老师</span>
                }
                else if (user.fRole == "Student")
                {
                    <span>学生</span>
                }
                else if (user.fRole == "Manager")
                {
                    <span>管理员</span>
                }</td>
            <td>@user.fMobile</td>
            <td>@user.fEmail</td>
            <td class="text-l">@user.fNickName</td>
            <td>@user.fCreateDate</td>
            <td class="td-status"><span class="label label-success radius">@user.fStatus</span></td>
            <td class="td-manage">
            <a style="text-decoration:none" onclick="member_stop(this,'10001')" href="javascript:;" title="停用"><i class="Hui-iconfont">&#xe631;</i></a> 
            <a title="编辑" href="javascript:;" onclick="item_edit('编辑','member-add.html','4','','510')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a> 
            <a style="text-decoration:none" class="ml-5" onclick="change_password('修改密码','change-password.html','10001','600','270')" href="javascript:;" title="修改密码"><i class="Hui-iconfont">&#xe63f;</i></a> 
            <a title="删除" href="javascript:;" onclick="item_del(this,'1')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6e2;</i></a>
            </td>
        </tr>
        }
    </tbody>
</table>