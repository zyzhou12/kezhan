@model KeZhanManager.Models.UserPayListModel
<table class="table table-border table-bordered table-hover table-bg table-sort">
    <thead>
        <tr class="text-c">
            <th width="25"><input type="checkbox" name="" value=""></th>
            <th width="120">单号</th>
            <th width="130">订单号</th>
            <th width="50">金额</th>
            <th width="50">订单类型</th>
            <th width="50">支付方式</th>
            <th width="120">支付单号</th>
            <th width="120">支付时间</th>
            <th>备注</th>
            <th width="100">操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pay in Model.payList)
        {
            <tr class="text-c">
                <td><input type="checkbox" value="@pay.fID" name=""></td>
                <td>@pay.fOrderNo</td>

                <td>@pay.fRemark</td>
                <td>
                    @pay.fAmount
                </td>
                <td>
                    @if (pay.fType == "BuyClass")
                    {
                        <span>购买课程</span>
                    }
                    else if (pay.fType == "BuyFlow")
                    {
                        <span>购买流量</span>
                    }
            </td>
            <td class="text-l">
                @if (pay.fPayType == "weixinpay")
                {
                    <span class="label label-success radius">微信</span>
                }
                else if (pay.fPayType == "alipay")
                {
                    <span class="label label-success radius">支付宝</span>
                }
            </td>
            <td>@pay.fPayNo</td>
            <td>@pay.fPayDate</td>
            <td class="td-status">@pay.fNote</td>
            <td class="td-manage">
                <a style="text-decoration:none" onclick="article_shenhe(this,'10001')" href="javascript:;" title="审核">审核</a>
            </td>
        </tr>
        }
    </tbody>
</table>