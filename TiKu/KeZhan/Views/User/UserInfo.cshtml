        } else if (div == "parents") {
            $(".reservation-billing-detail").hide();
            $("#panelParents").show();
        }
    }

    function updateMobile() {
        // $("#spanMobile").hide();
        $("#aMobile").hide();
        $("#txtMobile").show();
        $("#txtCode").show();
        $("#btnCode").show();
        $("#btnMobile").show();
        $("#txtMobile").focus();
    }




    var flag = 0;
    var time_ok = get_time_add(0);
    var time_hd = 0;

    function left_time() {
        var rst = 0;
        var now = get_time_add(0);
        if (now < time_ok) rst = Math.floor((time_ok - now) / 1000);
        return rst;
    }

    function get_time_add(val) {
        val = parseInt(val);
        var rst = (new Date()).getTime() + val * 1000;
        return rst;
    }


    function time_fun() {
        updateLabNo();
    }


    $(document).ready(function () {
        updateLabNo();
        time_hd = setInterval("time_fun()", 1000);
    });


    function updateLabNo() {
        var str = "";
        if (flag == 0) {
            str = "获取验证码";
        } else if (flag == 1) {
            str = "验证码已发送";
        }

        var tm = left_time();
        if (tm > 0) {
            str = str + "(" + tm + ")";
        } else if (flag == 1) {
            str = "重新获取验证码";
        }

        $("#btnCode").text(str);
    }


    function DoSendCode() {
        var reg = /^0?1[3|4|5|7|8][0-9]\d{8}$/;

        if ($("#txtMobile").val() == "") {
            alert("请输入联系手机");
            $("#txtMobile").focus();
            return;
        } else if (!reg.test($("#txtMobile").val())) {
            alert("手机号格式错误，请重新输入");
            $("#txtMobile").focus();
            return;
        }


        var tm = left_time();
        if (tm > 0) {
            alert("请在 " + tm + " 秒后再次点击发送");
            return;
        }

        $.ajax({
            url: "/Request/DoSendCode",
            data: { "strMobile": $("#txtMobile").val() },
            type: "POST",
            dataType: "json",
            success: function (rst) {

                if (rst.iResult >= 0) {
                    $("#txtMobile").attr("disabled", true);
                    $("#txtCode").attr("disabled", false);
                    flag = 1;
                    time_ok = get_time_add(30);
                    updateLabNo();

                } else {
                    alert(rst.strMsg);
                }
            }

        });
    }



    function DoSaveMobile() {
        if ($("#txtCode").val() == "") {
            alert("请输入验证码");
            return;
        }

        $.ajax({
            url: "/LoginRequest/DoUpdateMobile",
            data: { "strMobile": $("#txtMobile").val(), "strCode": $("#txtCode").val() },
            type: "POST",
            dataType: "json",
            success: function (rst) {
                if (rst.iResult >= 0) {
                    // window.location.href = "/user/userinfoedit";
                    alert("保存成功");
                    window.location.reload();
                } else if (rst.iResult == -9999) {
                    alert("请重新登录");
                } else {
                    alert(rst.strMsg);
                }
            }

        });
    }



    function updateEmail() {
        $("#aEmail").hide();
        $("#txtEmail").show();
        $("#btnEmailCode").show();
        $("#txtEmailCode").show();
        $("#btnEmail").show();
        $("#txtEmail").focus();
    }

    function DoSendEmailCode() {
        var reg = /^([a-zA-Z]|[0-9])(\w|\-)+@@[a-zA-Z0-9]+\.([a-zA-Z]{2,4})$/;

        if ($("#txtEmail").val() == "") {
            alert("请输入邮箱");
            $("#txtEmail").focus();
            return;
        } else if (!reg.test($("#txtEmail").val())) {
            alert("邮箱格式错误，请重新输入");
            $("#txtEmail").focus();
            return;
        }


        var tm = left_time();
        if (tm > 0) {
            alert("请在 " + tm + " 秒后再次点击发送");
            return;
        }

        $.ajax({
            url: "/LoginRequest/DoSendEmailCode",
            data: { "strEmail": $("#txtEmail").val() },
            type: "POST",
            dataType: "json",
            success: function (rst) {

                if (rst.iResult >= 0) {
                    $("#txtEmail").attr("disabled", true);
                    $("#txtEmailCode").attr("disabled", false);
                    alert("验证邮件已发送，请注意查收");
                    flag = 1;
                    time_ok = get_time_add(30);
                    updateLabNo();

                } else {
                    alert(rst.strMsg);
                }
            }

        });
    }



    function DoSaveEmail() {
        if ($("#txtEmailCode").val() == "") {
            alert("请输入邮箱验证码");
            return;
        }

        $.ajax({
            url: "/LoginRequest/DoUpdateEmail",
            data: { "strEmail": $("#txtEmail").val(), "strCode": $("#txtEmailCode").val() },
            type: "POST",
            dataType: "json",
            success: function (rst) {
