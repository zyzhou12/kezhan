<script type="text/javascript">
    function showPanel(div) {
        if (div == "user") {
            $(".reservation-billing-detail").hide();
            $("#panelUser").show();
        } else if (div == "teacher") {
            $(".reservation-billing-detail").hide();
            $("#panelTeacher").show();
        } else if (div == "valid") {
            $(".reservation-billing-detail").hide();
            $("#panelValid").show();
        } else if (div == "student") {
