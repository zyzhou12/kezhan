<div id="divPayCode" class="reveal-modal" style="top: 440px;opacity: 1; visibility: visible; display:none;">
    <h1>
        微信扫码支付
    </h1>

    <p>
        <img id="imgQrCode" src="" />

    </p>
    <button class="awe-btn awe-btn-13" onclick="ClosePayCode()">支付完成</button>


    <a class="close-reveal-modal" onclick="ClosePayCode()">&#215;</a>
</div>


<script type="text/javascript">
    var username = "@Model.UserName";
    var openid = "@Model.OpenID";
    var classfee = "@Model.ClassFee";

    $(document).ready(function () {
        if (is_weixn()) {
            $("#liAli").hide();
        }
    })

    function ChooseAmount(obj, iAmount) {
        $(".awe-btn").removeClass("awe-btn-8");
        $(obj).addClass("awe-btn-8");
        $("#hidAmount").hide();
        $("#hidAmount").val(iAmount);
    }

    function InputAmount(obj) {
        $(".awe-btn").removeClass("awe-btn-8");
        $(obj).addClass("awe-btn-8");

        $("#hidAmount").show();
        $("#hidAmount").val("");
    }

    function UserPay() {

        $.ajax({
            url: "/LoginRequest/SubmitBuyFlowOrder",
            data: { "iNum": $("#hidAmount").val(), "dPrice": classfee },
            type: "POST",
            dataType: "json",
            success: function (rst) {
                if (rst != "") {

                    var payType = $("input[name='rPayType']:checked").val();

                    if (payType == "accountpay") {
                        AiZhuPay(rst);//账号余额支付
                    } else {
                        if (IsPC()) {
                            PCPay(rst);
                        } else {
                            if (is_weixn()) {
                                WXPay(rst)
                            } else {
                                WapPay(rst);
                            }
                        }
                    }
                } else if (rst.iResult == -9999) {
                    alert("请重新登录");
                } else {
                    alert(rst.strMsg);
                }
            }

        });


    }

    function PCPay(bookingNo) {
        var fee = parseFloat($("#hidAmount").val()) * parseFloat(classfee);

        var payType = $("input[name='rPayType']:checked").val();

        if (payType == "weixinpay") {
            $.ajax({
                url: "/weixinpay/UserPay",
                data: { "strUserName": username, "strType": "BuyFlow", "strBookingNo": bookingNo, "strFee": fee },
                type: "POST",
                dataType: "json",
                success: function (rst) {
                    if (rst.iResult >= 0) {
                        $("#imgQrCode").attr("src", "http://qr.liantu.com/api.php?text=" + rst.strMsg);
                        $("#myBGDiv").show();
                        $("#divPayCode").show();

                        setTimeout("GetFlowStoredStatus('" + bookingno + "')", 2000);
                    } else {
                        alert(rst.strMsg);
                    }
                }

            });
        } else if (payType == "alipay") {
            $.ajax({
                url: "/alipay/UserPay",
                data: { "strUserName": username, "strType": "BuyFlow", "strBookingNo": bookingNo, "strFee": fee },
                type: "POST",
                dataType: "json",
                success: function (rst) {

                    if (rst.iResult >= 0) {
                        $("#divQrCode").html(rst.strMsg);
                        $("#divQrCode").show();
                    } else {
                        alert(rst.strMsg);
                    }
                }

            });
        } else {
            alert("账号支付暂未开通");
        }
    }

    function WXPay(bookingNo) {
        var fee = parseFloat($("#hidAmount").val()) * parseFloat(classfee);

        $.ajax({
            url: "/weixinpay/UserWeiXinPay",
            data: { "openid": openid, "strUserName": username, "strType": "BuyFlow", "strBookingNo": bookingNo, "strFee": fee },
            type: "POST",
            dataType: "json",
            success: function (rst) {
                WeixinJSBridge.invoke(
                'getBrandWCPayRequest', {
                    "appId": rst.appId,     //公众号名称，由商户传入
                    "timeStamp": rst.timeStamp,         //时间戳，自1970年以来的秒数
                    "nonceStr": rst.nonceStr, //随机串
                    "package": rst.packageValue,
                    "signType": "MD5",         //微信签名方式:
                    "paySign": rst.paySign //微信签名
                },
                function (res) {
                    if (res.err_msg == "get_brand_wcpay_request:ok") {
                        setTimeout(window.location.reload(), 1000);
                    } else {
                        // alert(res.err_msg);
                        $("#getBrandWCPayRequest").attr("disabled", false)
                        $("#getBrandWCPayRequest").val("支付");
                    }     // 使用以上方式判断前端返回,微信团队郑重提示：res.err_msg将在用户支付成功后返回    ok，但并不保证它绝对可靠。

                }
               );
            }

        });

    }

    function WapPay(bookingNo) {
        var fee = parseFloat($("#hidAmount").val()) * parseFloat(classfee);
        var payType = $("input[name='rPayType']:checked").val();
        if (payType == "weixinpay") {
            $.ajax({
                url: "/weixinpay/UserWapPay",
                data: { "strUserName": username, "strType": "BuyFlow", "strBookingNo": bookingNo, "strFee": fee },
                type: "POST",
                dataType: "json",
                success: function (rst) {
                    if (rst.iResult >= 0) {
                        window.location.href = rst.strMsg;
                    } else {
                        alert(rst.strMsg);
                    }
                }

            });
        } else if (payType == "alipay") {
            $.ajax({
                url: "/alipay/UserWapPay",
                data: { "strUserName": username, "strType": "BuyFlow", "strBookingNo": bookingNo, "strFee": fee },
                type: "POST",
                dataType: "json",
                success: function (rst) {

                    if (rst.iResult >= 0) {
                        $("#divQrCode").html(rst.strMsg);
                        $("#divQrCode").show();
                    } else {
                        alert(rst.strMsg);
                    }
                }

            });
        } else {
            alert("账号支付暂未开通");
        }
    }

    function AiZhuPay(bookingNo) {
        var tradePass = "";
        tradePass = prompt("请输入交易密码")
        if (tradePass == "") {
            alert("请输入交易密码");
            return;
        }

        $.ajax({
            url: "/AiZhuPay/BookingPay",
            data: { "strBookingType": "Flow", "strBookingNo": bookingNo, "strTradePass": tradePass },
            type: "POST",
            dataType: "json",
            success: function (rst) {
                if (rst.iResult >= 0) {
                    alert("支付成功");
                    window.location.reload();
                } else {
                    alert(rst.strMsg);
                }
            }

        });
    }

    function GetFlowStoredStatus(bookingno) {
        $.ajax({
            url: "/weixinpay/GetFlowStatus",
            data: { "strBookingNo": bookingno },
            type: "POST",
            dataType: "json",
            success: function (rst) {
                if (rst.iResult == 1) {
                    alert("支付成功")
                    window.location.reload();
                } else {
                    setTimeout("GetFlowStoredStatus('" + bookingno + "')", 2000);
                }
            }

        });

    }

    function ClosePayCode() {
        $("#myBGDiv").hide();
        $("#divPayCode").hide();
    }
</script>