@model TiKuBll.Model.UserRefundListModel
@{
    ViewBag.Title = "UserRefundList";
}



<section class="section-reservation-page bg-white">

    <div class="container">

        <div class="reservation-page">


            <div class="row">


                <!-- CONTENT -->
                <div class="col-md-8 col-lg-9">

                    <div class="reservation_content">
                        <div class="activiti">

                            <div class="gallery-cat activiti-cat ">

                                <ul class="list-inline">
                                    <li>状态：</li>
                                    <li><a href="/Booking/UserRefundList?strStatus=">全部</a></li>
                                    <li><a href="/Booking/UserRefundList?strStatus=0">提交</a></li>
                                    <li><a href="/Booking/UserRefundList?strStatus=1">已退款</a></li>
                                    <li><a href="/Booking/UserRefundList?strStatus=2">已驳回</a></li>
                                </ul>

                            </div>
                        </div>


                        <div class="reservation-billing-detail">

                            <div id="comments">
                                <ul class="commentlist">
                                    @if (Model.refundList != null && Model.refundList.Count > 0)
                                    {
                                        foreach (var b in Model.refundList)
                                        {
                                            <li>
                                                <div class="comment-body">

                                                    <h4 class="comment-subject">
                                                        退款单号：@b.fOrderNo
                                                    </h4>
                                                    <span class="comment-meta">
                                                        订单号：                                                        @b.fBookingNo
                                                        <br />
                                                        提交时间：@b.fCreateDate.ToString()
                                                        <br />
                                                        用户名：@b.fUserName.ToString()
                                                        <br />
                                                        金额：@b.fApplyAmount
                                                    </span>
                                                    @if (b.fStatus == "0")
                                                    {
                                                        <div class="action">
                                                            <a href="UserRefund?iRefundID=@b.fID" class="awe-btn awe-btn-14">处理</a>
                                                        </div>
                                                    }
                                                </div>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <spa>没有符合条件的退款单</spa>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- END / CONTENT -->

            </div>
        </div>
    </div>

</section>
<!-- END / SUB BANNER -->


