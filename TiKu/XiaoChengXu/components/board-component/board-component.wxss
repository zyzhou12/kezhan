/* components/board-component/board-component.wxss */

.tic-board-box {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.tic-board-box .tic_board_canvas {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 15;
}

.tic-board-box .tic_board_img_bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.tic-board-box .tic_board_img_bg.vertical {}

.tic-board-box .tic_board_img_bg.horizontal {
  transform: rotate(90deg);
  transform-origin: left top 0;
}

.tic-board-box .tic_board_color_bg {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 5;
}